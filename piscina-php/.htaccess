# Abilita Rewrite Engine per URL puliti
RewriteEngine On

# Blocca accesso a cartelle sensibili
Options -Indexes

# Permetti solo GET e POST per le API
<FilesMatch "\.php$">
    <LimitExcept GET POST PUT PATCH DELETE OPTIONS>
        Deny from all
    </LimitExcept>
</FilesMatch>

# Proteggi file di configurazione
<Files "config.php">
    Order allow,deny
    Deny from all
</Files>

# Proteggi file .env e .git
<FilesMatch "^\.">
    Order allow,deny
    Deny from all
</FilesMatch>

# Forza HTTPS in produzione (decommentare quando si va live)
# RewriteCond %{HTTPS} off
# RewriteRule ^(.*)$ https://%{HTTP_HOST}%{REQUEST_URI} [L,R=301]

# Gestione errori personalizzati
ErrorDocument 404 /piscina-php/404.html
ErrorDocument 500 /piscina-php/500.html

# Timeout upload (5MB)
php_value upload_max_filesize 5M
php_value post_max_size 6M

# Limita esecuzione script a 60 secondi
php_value max_execution_time 60

# Abilita compression
<IfModule mod_deflate.c>
    AddOutputFilterByType DEFLATE text/html text/plain text/xml text/css text/javascript application/javascript application/json
</IfModule>

# Cache headers per risorse statiche
<IfModule mod_expires.c>
    ExpiresActive On
    ExpiresByType image/jpg "access plus 1 month"
    ExpiresByType image/jpeg "access plus 1 month"
    ExpiresByType image/png "access plus 1 month"
    ExpiresByType text/css "access plus 1 week"
    ExpiresByType text/javascript "access plus 1 week"
    ExpiresByType application/javascript "access plus 1 week"
</IfModule>
